.row
  .col-md-10
    %h1 Projects
  .col-md-2
    .text-right
      = link_to "Create project", new_project_path, class: 'btn btn-default btn-block'
%p
  %table.table.table-hover
    %thead
      %tr
        %th Name
        %th Description
        %th Watchers
        %th Balance
        %th
    %tbody
      - @projects.each do |project|
        %tr
          %td
            %strong= link_to project.name, project
          %td= project.description
          %td= project.watchers_count
          %td= btc_human project.available_amount_cache
          %td= link_to 'Details', project, class: 'btn btn-default btn-block'
  = paginate @projects
